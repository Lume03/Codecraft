{
    "entities": {
        "UserProfile": {
            "title": "User Profile",
            "description": "Represents a user's profile information.",
            "type": "object",
            "properties": {
                "displayName": {
                    "type": "string",
                    "description": "The user's display name."
                },
                "username": {
                    "type": "string",
                    "description": "The user's unique username."
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                },
                "photoURL": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL of the user's profile picture."
                },
                "level": {
                    "type": "number",
                    "description": "The user's current level."
                },
                "streak": {
                    "type": "number",
                    "description": "The user's current practice streak."
                },
                "lastStreakUpdate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The last time the user's practice streak was updated."
                },
                "achievements": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of achievements unlocked by the user."
                },
                "reminders": {
                    "type": "boolean",
                    "description": "Whether the user has learning reminders enabled."
                },
                "emailNotifications": {
                    "type": "boolean",
                    "description": "Whether the user wants to receive weekly email summaries."
                },
                "reminderTime": {
                    "type": "string",
                    "description": "The user's preferred time for learning reminders (e.g., '19:00')."
                },
                "lives": {
                    "type": "number",
                    "description": "Number of lives the user has."
                },
                "lastLifeUpdate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The last time a life was regenerated."
                },
                "firebaseUid": {
                    "type": "string",
                    "description": "The user's unique ID from Firebase Authentication."
                },
                "progress": {
                    "type": "object",
                    "description": "Object containing user's progress in courses.",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "completedLessons": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Array of completed lesson IDs."
                            },
                             "unlockedLessons": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Array of unlocked lesson IDs."
                            }
                        }
                    }
                },
                "fcmToken": {
                    "type": "string",
                    "description": "Firebase Cloud Messaging token for push notifications."
                }
            },
            "required": ["displayName", "email", "firebaseUid"]
        },
        "Course": {
            "title": "Course",
            "description": "Represents a course in the learning platform.",
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "icon": {
                    "type": "string",
                    "description": "Name of the icon component (e.g., 'PythonIcon')."
                },
                "imageId": {
                    "type": "string",
                    "description": "ID of the placeholder image for the course."
                }
            }
        },
        "Module": {
            "title": "Module",
            "description": "A module within a course, containing lessons.",
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["theory", "quiz"]
                },
                "contentId": {
                    "type": "string",
                    "description": "ID of the corresponding theory or quiz."
                },
                "duration": {
                    "type": "number",
                    "description": "Duration in minutes."
                },
                "order": {
                    "type": "number",
                    "description": "Order of the module within the course."
                }
            }
        },
        "Theory": {
            "title": "Theory Content",
            "description": "The content for a theory lesson, composed of pages.",
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                }
            }
        },
        "TheoryPage": {
            "title": "Theory Page",
            "description": "A single page of content within a theory lesson.",
            "type": "object",
            "properties": {
                "content": {
                    "type": "string",
                    "description": "The markdown content of the page."
                },
                "order": {
                    "type": "number",
                    "description": "The order of the page within the lesson."
                },
                "title": {
                    "type": "string",
                    "description": "The title of the page within the lesson."
                }
            }
        },
        "PracticeHistory": {
            "title": "Practice History",
            "description": "A record of a single practice attempt by a user.",
            "type": "object",
            "properties": {
                "firebaseUid": {"type": "string"},
                "courseId": {"type": "string"},
                "lessonId": {"type": "string"},
                "score": {"type": "number"},
                "maxScore": {"type": "number"},
                "approved": {"type": "boolean"},
                "createdAt": {"type": "string", "format": "date-time"}
            }
        }
    },
    "auth": {
        "providers": ["google.com", "password"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": {
                "$ref": "#/entities/UserProfile"
            },
            "description": "Stores public profile information for each user."
        },
        "/courses": {
            "schema": {
                "$ref": "#/entities/Course"
            },
            "description": "Top-level collection for all available courses."
        },
        "/courses/{courseId}/modules": {
            "schema": {
                "$ref": "#/entities/Module"
            },
            "description": "Sub-collection for modules within a course."
        },
        "/theories/{theoryId}": {
            "schema": {
                "$ref": "#/entities/Theory"
            },
            "description": "Collection to store theory lesson shells."
        },
        "/theories/{theoryId}/pages": {
            "schema": {
                "$ref": "#/entities/TheoryPage"
            },
            "description": "Sub-collection for individual pages within a theory lesson."
        },
        "/practiceHistory": {
            "schema": {
                "$ref": "#/entities/PracticeHistory"
            },
            "description": "Collection to store results from every practice attempt."
        }
    }
}
